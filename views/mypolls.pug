html
  head
  body
    include includes/navbar.pug
    br
    div(class="container-fluid")
      div(class="row")
        div(class="col-md-8")
          div(class="col-md-12 col-md-offset-1")
            ul(class="list-inline")
              each poll in allPolls
                div(class="col-md-6")
                  li
                    a(href="/polls/" + poll.uniqueID, class="list-group-item")= poll.title
                div(class="btn-group col-md-6")
                  a(type="button", href="/edit/" + poll.uniqueID, class="btn btn-default") Edit
                  form(action="/delete", method="post")
                    button(type="submit", class="btn btn-danger" name="Delete", value=poll.uniqueID) Delete
                br
                br
                br
